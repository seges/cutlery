#!/bin/bash


function stop
{
  echo "[stop] ambassador"
  docker stop ambassador
  echo "[rm] ambassador"
  docker rm ambassador

  iptables_stop
}

function iptables_stop
{
  echo "[stop] ambassador iptables"
  docker stop ambassadoriptables
  echo "[rm] ambassador iptables"
  docker rm ambassadoriptables
}

function start
{
  echo "[start] ambassador $ambassador_name"
  docker run -d \
    --name $ambassador_name \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -t progrium/ambassadord \
    --omnimode

  iptables_start
}

function iptables_start
{
  echo "[start] ambassador iptables"
  docker run -d \
    --name ambassadoriptables \
    -v /var/run/docker.sock:/var/run/docker.sock \
    --privileged \
    --net="container:$ambassador_name" \
    -t progrium/ambassadord \
    --setup-iptables
}

if [ $# -lt 1 ]; then
  echo "$(basename $0) <start|stop|restart|iptables> [ambassador_name]"
  echo "ambassador_name What name should be used for the Ambassador container"
  exit 42
fi

COMMAND="$1"
shift

if [ "$1" == "" ]; then
  ambassador_name="ambassador"
else
  ambassador_name="$1"
fi

case $COMMAND in
start)
  start
  ;;
stop)
  stop
  ;;
restart)
  stop
  start
  ;;
iptables)
  iptables_stop
  iptables_start
  ;;
esac

